extends ../layouts/indexv4.pug


block content 
    // breadcrumb
    .container
      .bread-crumb.flex-w.p-l-25.p-r-15.p-t-30.p-lr-0-lg
        a.stext-109.cl8.hov-cl1.trans-04(href='index.html')
          | Home
          i.fa.fa-angle-right.m-l-9.m-r-10(aria-hidden='true')
        span.stext-109.cl4
          | Shoping Cart
    // Shoping Cart
    form#checkout-form.bg0.p-t-75.p-b-85
      .container
        .row
          .col-lg-10.col-xl-7.m-lr-auto.m-b-50
            .m-l-25.m-r--38.m-lr-0-xl
              .wrap-table-shopping-cart
                table#table-items.table-shopping-cart
              #cart-footer.flex-w.flex-sb-m.bor15.p-t-18.p-b-15.p-lr-40.p-lr-15-sm
                .flex-w.flex-m.m-r-20.m-tb-5
                  input.stext-104.cl2.plh4.size-117.bor13.p-lr-20.m-r-10.m-tb-5(type='text' name='coupon' placeholder='Coupon Code')
                  .flex-c-m.stext-101.cl2.size-118.bg8.bor13.hov-btn3.p-lr-15.trans-04.pointer.m-tb-5
                    | Apply coupon
                .flex-c-m.stext-101.cl2.size-119.bg8.bor13.hov-btn3.p-lr-15.trans-04.pointer.m-tb-10
                  | Update Cart
          .col-sm-10.col-lg-7.col-xl-5.m-lr-auto.m-b-50
            .bor10.p-lr-40.p-t-30.p-b-40.m-l-63.m-r-40.m-lr-0-xl.p-lr-15-sm
              h4.mtext-109.cl2.p-b-30
                | Cart Totals
              .flex-w.flex-t.bor12.p-b-13
                .size-208
                  span.stext-110.cl2
                    | Subtotal:
                .size-209
                  span#subtotal1.mtext-110.cl2
              .flex-w.flex-t.bor12.p-t-15.p-b-30
                .size-208.w-full-ssm
                  span.stext-110.cl2
                    | Shipping:
                .size-209.p-r-18.p-r-0-sm.w-full-ssm
                  p.stext-111.cl6.p-t-2
                    | There are no shipping methods available. Please double check your address, or contact us if you need any help.
                  .p-t-15
                    span.stext-112.cl8
                      | Calculate Shipping
                    .rs1-select2.rs2-select2.bor8.bg0.m-b-12.m-t-9
                      select#city.js-select2.quicksand(name='time' required)
                        option Select a city...
                      .dropDownSelect2
                    .rs1-select2.rs2-select2.bor8.bg0.m-b-12.m-t-9
                      select#district.js-select2.quicksand(name='time' required)
                        option Select a district...
                      .dropDownSelect2
                    .rs1-select2.rs2-select2.bor8.bg0.m-b-12.m-t-9
                      select#ward.js-select2.quicksand(name='time' required)
                        option Select a ward...
                      .dropDownSelect2
                    .bor8.bg0.m-b-22
                      input.stext-111.cl8.plh3.size-111.p-lr-15.quicksand(type='text' name='address' placeholder='Your addresses' required)
                    .flex-w
                      #update-total-btn.flex-c-m.stext-101.cl2.size-115.bg8.bor13.hov-btn3.p-lr-15.trans-04.pointer
                        | Update Totals
              .flex-w.flex-t.p-t-27.p-b-33
                .size-208
                  span.mtext-101.cl2
                    | Total:
                .size-209.p-t-1
                  span#subtotal2.mtext-110.cl2
                    
              button.flex-c-m.stext-101.cl0.size-116.bg3.bor14.hov-btn3.p-lr-15.trans-04.pointer
                | Proceed to Checkout
block scripts
    script(src='/vendor/select2/select2.min.js')
    script(src='/js/render.js')
    script.
        var render = new RenderController();
        render.initialize();
    script.
        $('.js-select2').each(function () {
          $(this).select2({
              minimumResultsForSearch: 20,
              dropdownParent: $(this).next('.dropDownSelect2'),
              dropdownCssClass:':all:quicksand',
              selectionCssClass:'quicksand'
            });
          
        });
        $('.select2-selection__rendered').addClass('quicksand');
        $("#checkout-form").on('submit',(e)=>{
          e.preventDefault();
          swal('Good job!', 'Your request is processing!', 'success');
        } )
    script.
      $(".gallery-lb").each(function () {
          // the containers for all your galleries
          //popup product view
          $(this).magnificPopup({delegate: "a",type: "image",gallery: {enabled: true,},mainClass: "mfp-fade",});
      });
    

    
    